<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RelativeLayout">
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#ef9b00">

        <EditText android:id="@+id/txtName"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:background="#f8eff8f3"
                android:hint="Nom"
                android:padding="16dp"/>

        <EditText android:id="@+id/txtEmail"
                  android:layout_width="180dp"
                  android:layout_marginStart="5dp"
                  android:layout_height="wrap_content"
                  android:layout_toEndOf="@+id/txtName"
                  android:background="#f8eff8f3"
                  android:hint="Courriel"
                  android:padding="16dp"/>


        <EditText android:id="@+id/txtSubject"
                  android:layout_width="match_parent"
                  android:layout_marginTop="16dp"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/txtName"
                  android:background="#f8eff8f3"
                  android:hint="Sujet"
                  android:padding="16dp"/>

        <EditText android:id="@+id/txtMessage"
                  android:layout_width="match_parent"
                  android:layout_marginTop="16dp"
                  android:layout_height="200dp"
                  android:layout_below="@+id/txtSubject"
                  android:background="#f8eff8f3"
                  android:hint="Message"
                  android:padding="16dp"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
